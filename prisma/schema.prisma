generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model for users

model User {
  id            String   @id @default(uuid())
  username      String
  email         String   @unique
  password      String
  posts         Post[]
  avatar        String?
  bio           String?
  title         String?
  createdAt     DateTime @default(now())
  Comment       Comment[]
  Like          Like[]
  PostDraft PostDraft[]
}

//model for posts

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  images    Image[]
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  Comment Comment[]
  Like Like[]
}

model Image {
  id  String @id @default(uuid())
  url String
  Post Post[]

  PostDraft PostDraft[]
}

model PostDraft {
  id        String   @id @default(uuid())
  title     String
  content   String
  images    Image[]
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
}

// model for comments

model Comment {
  id        String   @id @default(uuid())
  content   String
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

// model for likes

model Like {  
  id        String   @id @default(uuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}